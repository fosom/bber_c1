<?xml version="1.0" encoding="utf-8"?>
<com.bber.company.android.view.customcontrolview.ListItemLinePay xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/paybackcolor">


    <ImageView
        android:id="@+id/payinputlistviewinconid"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/top_margin10"
        android:src="@mipmap/alipay" />

    <TextView
        android:id="@+id/payinputlistviewnameid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/payinputlistviewinconid"
        android:gravity="center_vertical"
        android:textColor="@color/textcolor" />

    <TextView
        android:id="@+id/payinputlistviewxuanid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:background="@mipmap/icon_no_choose" />
</com.bber.company.android.view.customcontrolview.ListItemLinePay>
