<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_custom_bank" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/top_margin6"
        android:background="@drawable/setting_item_bg"
        android:layout_height="wrap_content">
        <TextView
            style="@style/main_text_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin40"
            android:text="@string/my_balance"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_balance"
            style="@style/main_text_24"
            android:layout_marginBottom="@dimen/top_margin40"
            android:text="0"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_recharge"
        style="@style/item_style_setting"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/top_margin6"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_pay" />

        <TextView
            style="@style/main_text_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/top_margin20"
            android:layout_toRightOf="@+id/img_recharge"
            android:text="@string/recharge" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow" />
    </RelativeLayout>
    <include layout="@layout/view_line" />

    <RelativeLayout
        android:id="@+id/rl_bank_card"
        style="@style/item_style_setting"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/top_margin6"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_bank_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_card" />

        <TextView
            style="@style/main_text_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/top_margin20"
            android:layout_toRightOf="@+id/img_bank_card"
            android:text="@string/bankcard" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow" />
    </RelativeLayout>

</LinearLayout>