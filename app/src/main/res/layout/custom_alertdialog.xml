<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_text"
        style="@style/main_text_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/top_margin15"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/top_margin8"
        android:layout_marginRight="@dimen/top_margin15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancle"
            style="@style/text_gray14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_item"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/top_margin6"
            android:paddingLeft="@dimen/top_margin12"
            android:paddingRight="@dimen/top_margin12"
            android:paddingTop="@dimen/top_margin6"
            android:text="取消" />

        <TextView
            android:id="@+id/dialog_sure"
            style="@style/text_pink14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_left"
            android:background="@drawable/dialog_item"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/top_margin6"
            android:paddingLeft="@dimen/top_margin12"
            android:paddingRight="@dimen/top_margin12"
            android:paddingTop="@dimen/top_margin6"
            android:text="确定"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>