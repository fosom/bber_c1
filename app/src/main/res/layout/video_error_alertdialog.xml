<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@null">

    <RelativeLayout
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dialog_bg">
    <TextView
        android:id="@+id/dialog_reminding_text"
        style="@style/main_text_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/top_margin10"
        android:text="提示" />

    <TextView
        android:id="@+id/messsid"
        style="@style/main_text_14"
        android:layout_marginTop="@dimen/top_margin10"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_reminding_text"
        android:text="抱歉, 播放错误"/>

    <View
        android:layout_marginTop="@dimen/top_margin10"
        android:id="@+id/segmenting_line_id"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/messsid"
        android:background="@color/black_pre"/>

    <TextView
        android:id="@+id/button_sure_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin5"
        android:layout_below="@+id/segmenting_line_id"
        android:text="@string/sure_tip"
        android:textColor="@color/Coral"
        android:textSize="18sp"
        android:paddingBottom="@dimen/top_margin5"
        android:background="@null"
        android:gravity="center"/>
    </RelativeLayout>

</RelativeLayout>