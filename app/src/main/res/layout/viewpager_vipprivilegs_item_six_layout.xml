<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/six" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_margin10"
            android:gravity="center_vertical"
            android:text="特权介绍:"
            android:textColor="#6D380C"
            android:textSize="@dimen/vipjies" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margin10"
            android:gravity="center_vertical"
            android:text="@string/vip_privilege_introduce_text_six"
            android:textColor="#666666"

            android:textSize="@dimen/vipjiesmeass" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin10"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_margin10"
            android:gravity="center_vertical"
            android:text="热门推荐："
            android:textColor="#6D380C"
            android:textSize="@dimen/vipjies" />


    </LinearLayout>

</LinearLayout>
