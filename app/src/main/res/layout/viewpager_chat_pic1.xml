<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data >

        <variable
            name="recyclerViewModel"
            type="com.bber.company.android.viewmodel.ChatPicViewModel" />

        <variable
            name="headerBarViewModel"
            type="com.bber.company.android.viewmodel.HeaderBarViewModel" />

        <variable
            name="index"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <!-- 头部 -->
        <!--<include-->
        <!--layout="@layout/include_header"-->
        <!--app:headerBarViewModel="@{headerBarViewModel}" />-->
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.bber.company.android.widget.LoadMoreRecyclerView
                android:id="@+id/loadmore_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:emptyView="@{(int)0}"
                app:itemClick="@{recyclerViewModel.mmsOnClick}"
                app:itemLayout="@{@layout/adapter_chat_pic}"
                app:itemList="@{recyclerViewModel.mmslist}" />
        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>
</layout>